<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shade"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="385dp"
        android:layout_height="106dp"
        app:columnCount="3">

        <TextView
            android:id="@+id/RvRowHeaderTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:textColor="@color/primary"
            android:textColorHighlight="@color/white"
            android:textColorLink="@color/complementary"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/RvRowYearTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textColorHighlight="@color/primary"
            android:textColorLink="@color/complementary"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/RvRowPriceTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textColorHighlight="@color/primary"
            android:textColorLink="@color/complementary"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <ImageView
            android:id="@+id/RvRowListingImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="3"

            app:srcCompat="@android:drawable/ic_menu_report_image"
            android:contentDescription="Vehicle Image" />

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>
